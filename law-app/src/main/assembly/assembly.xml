<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0
          http://maven.apache.org/xsd/assembly-2.2.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>law-orchestrator-${project.version}</baseDirectory>

    <fileSets>
        <!-- Scripts bin/ -->
        <fileSet>
            <directory>${project.basedir}/../zip/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- Scripts bin/pi -->
        <fileSet>
            <directory>${project.basedir}/../zip/bin/pi</directory>
            <outputDirectory>bin/pi</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- JAR -->
        <fileSet>
            <directory>${project.basedir}/../zip/lib/jar</directory>
            <outputDirectory>lib/jar</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!-- Properties -->
        <fileSet>
            <directory>${project.basedir}/../zip/properties</directory>
            <outputDirectory>properties</outputDirectory>
            <includes>
                <include>*.yml</include>
                <include>*.yaml</include>
                <include>*.properties</include>
                <include>*.conf</include>
            </includes>
        </fileSet>

        <!-- Orchestrator scripts (new) -->
        <fileSet>
            <directory>${project.basedir}/../zip/bin/orchestrator</directory>
            <outputDirectory>bin/orchestrator</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- Top-level README (include repository README) -->
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

        <!-- Data (structure vide) -->
        <fileSet>
            <directory>${project.basedir}/../zip/data</directory>
            <outputDirectory>data</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>

        <!-- Logs (structure vide) -->
        <fileSet>
            <directory>${project.basedir}/../zip/logs</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
